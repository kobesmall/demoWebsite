<%- include('../partials/header') %>
    <%- include('../partials/menu') %>

        <section id="Search" class="Search">
            <div class="info d-flex align-items-center" style="margin-top: 20px">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 text-center">
                            <div class="bg-image p-5 text-center shadow-1-strong rounded mb-5 text-white" style="
              background-image: url('https://media.istockphoto.com/id/1219944808/photo/closeup-of-young-female-hands-chopping-fresh-vegetables-on-chopping-board-while-in-modern.jpg?s=612x612&w=0&k=20&c=yenJMmfv1jmG-79hN_Xb2xN_URbbGd1B1jOd2h78HEY=');
            ">
                                <h1 class="mb-5 h2" style="
                margin-bottom: 100;
                font-family: Snell Roundhand, cursive;
                font-style: italic;
                font-weight: 600;
              ">
                                    Recipe finder
                                </h1>
                                <form action="/main" method="POST">
                                    <div class="col-6 col-lg-12 input-group">
                                        <input type="text" class="form-control" id="food" name="food"
                                            placeholder="Search for..." />
                                        <span class="input-group-btn">
                                            <button class="btn btn-secondary" type="submit">Go!</button>
                                        </span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>




            <%if(locals.data){%>
                <%if(locals.data.meals==null){ %>
                    <div class="col-sm-6 mb-8" style="margin-left: 320px;">
                        <div class="alert alert-danger" role="alert">
                            no recipies found!
                        </div>
                    </div>
                    <%}%>
                        <%if(locals.data.meals!=null){%>
                            <div class="p-5 md:w-1/3">
                                <div class="row">


                                    <% data.meals.forEach(x=> {%>


                                        <div class="col-sm-4 mb-3">
                                            <div class="card" style="width: 18rem;">

                                                <img src="<%-x.strMealThumb%>" style="height: 18rem;"
                                                    class="card-img-top" alt="...">
                                                <h8
                                                    style="text-align:right;margin-top: 0px; color: rgb(39, 37, 37);background-color: rgb(159, 155, 155);">
                                                    <%if(x.strMeal!= null){%>
                                                        <%-x.strTags%>
                                                            <%}%>
                                                                &nbsp;
                                                </h8>
                                                <div class="card-body"style="background-color: beige;">

                                                    <h5 class="card-title">
                                                        <%-x.strMeal%>
                                                    </h5>
                                                    <hr>
                                                    <!-- Button trigger modal -->
                                                    <button type="button" class="btn " data-toggle="modal"
                                                        data-target="#<%-x.strMeal.split(' ').join('')%>ModalLong">
                                                        Instructions >
                                                    </button>

                                                    <!-- Modal -->
                                                    <div class="modal fade"
                                                        id="<%-x.strMeal.split(' ').join('')%>ModalLong" tabindex="-1"
                                                        role="dialog"
                                                        aria-labelledby="<%-x.strMeal.split(' ').join('')%>ModalLongTitle"
                                                        aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title"
                                                                        id="<%-x.strMeal.split(' ').join('')%>ModalLongTitle">
                                                                        Instructions</h5>
                                                                    <button type="button" class="close"
                                                                        data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <%-x.strInstructions%>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-dismiss="modal">Close</button>
                                                                </div>

                                                            </div>

                                                        </div>
                                                        
                                                    </div>
                                                    <%if(x.strSource!= null){%>
                                                        <hr style="font-size: 5px;margin-top:0px;">
                                                        <!-- Button trigger modal -->
                                                        <a href="<%-x.strSource%>"
                                                            style="color: black; text-decoration: none;">
                                                            <h5
                                                                style="font-size: 15px;margin-top:0px;margin-left: 12px;font-weight: 400;">
                                                                Dish Website ></h2>
                                                        </a>
                                                        <%}%>
                                                            <%if(x.strYoutube!= null){%>

                                                                <hr style="font-size: 5px;margin-top:0px;">
                                                                <!-- Button trigger modal -->
                                                                <a href="<%-x.strYoutube%>"
                                                                    style="color: black; text-decoration: none;">
                                                                    <h5
                                                                        style="font-size: 15px;margin-top:0px;margin-left: 12px;font-weight: 400;">
                                                                        Youtube ></h2>
                                                                </a>
                                                                <%}%>

                                                                <hr style="font-size: 5px;margin-top:0px;">
                                                                                 <!-- Button trigger modal -->
                                                    <button type="button" style="color: forestgreen;" class="btn " data-toggle="modal"
                                                    data-target="#r<%-x.strMeal.split(' ').join('')%>ModalLong">
                                                    Review >
                                                </button>

                                                <!-- Modal -->
                                                <div class="modal fade"
                                                    id="r<%-x.strMeal.split(' ').join('')%>ModalLong" tabindex="-1"
                                                    role="dialog"
                                                    aria-labelledby="r<%-x.strMeal.split(' ').join('')%>ModalLongTitle"
                                                    aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title"
                                                                    id="r<%-x.strMeal.split(' ').join('')%>ModalLongTitle">
                                                                    Review</h5>
                                                                <button type="button" class="close"
                                                                    data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <form action="/addReview" method="POST">
                                                            <div class="modal-body">
                                                                <input type="text" id="reviewNM" name="reviewNM" value="<%-x.strMeal.split(' ').join('')%>" placeholder="s"readonly></input>
                                                            
                                                                <textarea rows = "5" cols = "40" id="review" name= "review" placeholder="leave a review..."></textarea>
                                         
                                                            
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-dismiss="modal">Close</button>
                                                                    <button type="submit" class="btn btn-primary"
                                                                    >Submit</button>
                                                            </div>
                                                        </form>

                                                        </div>

                                                    </div>
                                                    
                                                </div>
                                                </div>
                                            </div>
                                        </div>

                                        <%})%>
                                </div>
                            </div>
                            </div>
                            </div>
                            </div>
        </section>


        <p style="color: white;margin-bottom: 10px;">

        </p>


        <%}%>
            <%}%>
                </section>
                <%- include('../partials/footer') %>